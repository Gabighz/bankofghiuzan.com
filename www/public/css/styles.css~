/* FOR MAP */
/* allow map to fill viewport */
#map-canvas
{
   width: 600px;
   height: 500px;
   margin: 0 auto;


}

/* FOR MAP */
/* stylize places' labels */
.labels
{
    /* small, black text */
    color: #000000;
    font-family: sans-serif;
    font-size: small;
    font-weight: bold;

    /* don't let places' labels wrap onto multiple lines */
    white-space: nowrap;
}

/* FOR MAP */
/* stylize info window */
#info
{
    /* no margin around this element */
    margin: 0;

    /* should be at least this width */
    min-width: 200px;

    /* allow scrollbars if needed */
    overflow: auto;
}

.container
{
    /* center contents */
    margin-left: auto;
    margin-right: auto;
    text-align: center;
}


#top .nav
{
    /* center navigation pills */
	display: inline-block;
	border: 2px solid black;
	margin: 10px;	
}

#middle .form-control
{
    /* center form controls */
    display: inline-block;

    /* override Bootstrap's 100% width for form controls */
    width: auto;
}

#bottom
{
    /* shrink bottom's font size */
    font-size: smaller;

    /* surround with whitespace */
    margin: 20px;
}

#sidebar 
{
	width: auto;
	height: 50px;
	padding-right:40px;
	position: absolute;
	top:400px;
	margin: 10px;
}


.container #middle
{
	background-color: white;
	width: 1000px;
	height: auto;
	margin-right: auto;
	margin-left: auto;
	border: 4px solid black;	
}

.small-pages
{
	width: auto;
	height: 250px;
	display: inline-block;
	margin-top: 50px;
}

